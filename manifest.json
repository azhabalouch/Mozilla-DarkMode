{
    "manifest_version": 2,
    "name": "Dark Mode Toggle",
    "version": "1.0",
    "description": "Enables dark mode on all websites.",
    "permissions": ["activeTab", "tabs"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Toggle Dark Mode"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["dark-mode.css"]
      }
    ]
  }
  